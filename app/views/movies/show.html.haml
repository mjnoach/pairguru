.jumbotron
  .row
    .col-md-4.text-center
      %img.img-rounded{ src: @movie.poster_url, width: '200', height: '292' }
      %h3= "Rating: " + @movie.rating
    .col-md-8
    %h1= @movie.title
    %p= @movie.plot
- if user_signed_in?
  %p= link_to 'Email me details about this movie', send_info_movie_path(@movie), class: 'btn btn-sm btn-default'
